//Traffic Lights Program
#include <reg51.h>
#include <stdio.h>
sbit RedLED0=P1^0;
sbit YellowLED1=P1^1;
sbit GreenLED2=P1^2;
int i,j,Delay;
void delay(Delay)
{
for(i=0;i<=Delay;i++)
   for(j=0;j<=5;j++);
   }
   void main(void)
 { 
    while(1)
    {
   //for Red LED
    RedLED0=1;
   YellowLED1=0;
   GreenLED2=0;
   delay(5000);
   RedLED0=0;
   delay(5000); 
    //for Yellow LED
    RedLED0=0;
   YellowLED1=1;
   GreenLED2=0;
   delay(5000);
   YellowLED1=0;
   delay(5000); 
    //for Green LED
    RedLED0=0;
   YellowLED1=0;
   GreenLED2=1;
   delay(5000);
   GreenLED2=0;
   delay(5000); 
}
